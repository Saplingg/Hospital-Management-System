<Window x:Class="Hospital_Management_System.AddPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Patient" Height="520" Width="392" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">

        <TextBlock Text="ADD PATIENT" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Label Content="Full Name:"/>
        <TextBox x:Name="txtFullName"/>

        <Label Content="Gender:"/>
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="rbMale" Content="Male" GroupName="GenderGroup"/>
            <RadioButton x:Name="rbFemale" Content="Female" GroupName="GenderGroup" Margin="20,0,0,0"/>
        </StackPanel>

        <Label Content="DOB:"/>
        <DatePicker x:Name="dpDOB"/>

        <Label Content="Phone:"/>
        <TextBox x:Name="txtPhone"/>

        <Label Content="Address:"/>
        <TextBox x:Name="txtAddress"/>

        <Label Content="Insurance No:"/>
        <TextBox x:Name="txtInsurance"/>

        <Button Content="Add Patient" Height="40" Margin="0,20,0,0" Click="BtnAdd_Click"/>

    </StackPanel>
</Window>
