<Window x:Class="Hospital_Management_System.AddUpdateMedicalRecordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Management_System"
        mc:Ignorable="d"
        Title="AddUpdateMedicalRecordPage" Width="400" SizeToContent="Height" Loaded="MedicalRecord_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="MidnightBlue">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26" Foreground="white" Padding="0 15">MEDICAL RECORD</TextBlock>
        </Grid>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock>Record ID:</TextBlock>
            <TextBox Name="Id" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2">
            <TextBlock>Appointment ID:</TextBlock>
            <ComboBox Name="AppointmentId" Margin="10 0 10 5"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="3">
            <TextBlock>Patient Name:</TextBlock>
            <TextBox Name="PatientName" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4">
            <TextBlock>Appointment Date:</TextBlock>
            <TextBox Name="ApDate" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5">
            <TextBlock>Diagnosis:</TextBlock>
            <TextBox x:Name="Diagnosis" Height="40" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10 0 10 5"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="6">
            <TextBlock>Doctor Note:</TextBlock>
            <TextBox x:Name="DoctorNote" Height="40" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10 0 10 5"/>
        </StackPanel>

        <Button Grid.Row="7" Margin="10 15 10 5" Foreground="White" Background="Green" Click="Save_Click">Save</Button>
    </Grid>
</Window>
