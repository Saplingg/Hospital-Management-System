<Window x:Class="Hospital_Management_System.AddUpdatePrescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Management_System"
        mc:Ignorable="d"
        Title="AddUpdatePrescription" SizeToContent="Height" Width="400" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="MidnightBlue">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26" Foreground="white" Padding="0 15">MEDICAL RECORD</TextBlock>
        </Grid>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock>Record ID:</TextBlock>
            <TextBox Name="Id" Margin="10 0 10 5" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2">
            <TextBlock>Medicine:</TextBlock>
            <ComboBox Name="Medicine" Margin="10 0 10 5"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="3">
            <TextBlock>Quantity:</TextBlock>
            <TextBox Name="Quantity" Margin="10 0 10 5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4">
            <TextBlock>Dosage:</TextBlock>
            <TextBox Name="Dosage" Margin="10 0 10 5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5">
            <TextBlock>Subtotal:</TextBlock>
            <TextBox Name="Subtotal" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>

        <Button Grid.Row="7" Margin="10 15 10 5" Foreground="White" Background="Green" Click="Save_Click">Save</Button>
    </Grid>
</Window>
