<Window x:Class="Hospital_Management_System.AppoinmentServiceForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Management_System"
        mc:Ignorable="d"
        Title="AppoinmentServiceForm" SizeToContent="WidthAndHeight" Width="600" WindowStartupLocation="CenterScreen" Loaded="ApService_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="MidnightBlue">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26" Foreground="white" Padding="0 15">APPOINTMENT SERVICES</TextBlock>
        </Grid>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock>Appointment ID:</TextBlock>
            <TextBox Name="AppointmentId" Margin="10 0 10 5" IsReadOnly="true" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2">
            <TextBlock>Service:</TextBlock>
            <ListBox Name="Service" Margin="10 0 10 5" Height="50">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Service.ServiceName}" Width="200" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding Quantity, StringFormat=Quantity: {0}}" HorizontalAlignment="Center" Width="200"/>
                            <TextBlock Text="{Binding SubTotal, StringFormat=Subtotal: {0}}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="3">
            <TextBlock>SubTotal:</TextBlock>
            <TextBox Name="Subtotal" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>

        <Button Grid.Row="4" Margin="10 15 10 5" Foreground="White" Background="Green" Click="Close_Click">Close</Button>
    </Grid>
</Window>
