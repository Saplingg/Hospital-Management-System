<Window x:Class="Hospital_Management_System.MedicalRecordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Management_System"
        mc:Ignorable="d"
        Title="MedicalRecordPage" Height="450" Width="800" WindowState="Maximized" Loaded="FilterSetup">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6.2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <local:SideBarDoctor/>
        </Grid>
        <Grid Margin="5" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" >MEDICAL RECORDS</TextBlock>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 10" HorizontalAlignment="Left" Width="Auto">
                <Button Margin="5" Width="80" Click="AddMedicalRecord">Add</Button>
                <Button Margin="5" Width="80" Click="UpdateMedicalRecord">Update</Button>
                <TextBox x:Name="sSearch" Margin="10 5" Width="200" BorderThickness="2"/>
                <Button Margin="5" Width="80" Click="FilterSetup">Search</Button>
                <Button Margin="5" Width="80" Click="btnClearSearch_Click">Clear Search</Button>
            </StackPanel>
            <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5 0 5 5">
                <Grid>
                    <TextBlock Margin="5 -10 0 10" Background="White" Width="Auto" HorizontalAlignment="Left">FILTER</TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="Auto" Margin="15 8">
                        <TextBlock VerticalAlignment="Center" Margin="10 0">Appointment Date:</TextBlock>
                        <DatePicker Name="ftDate" Width="120"></DatePicker>
                        <Button Margin="10 0" Width="80" Click="btnClearFilter_Click">Clear Filter</Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="3" Margin="5">
                <DataGrid x:Name="dgMR" AutoGenerateColumns="False" IsReadOnly="True" Margin="0" Grid.Column="0" RowHeaderWidth="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Record ID" Width="*" Binding="{Binding RecordId}" />
                        <DataGridTextColumn Header="Appointment ID" Width="2*" Binding="{Binding AppointmentId}" />
                        <DataGridTextColumn Header="Diagnosis" Width="2*" Binding="{Binding Diagnosis}" />
                        <DataGridTextColumn Header="Doctor Note" Width="2*" Binding="{Binding DoctorNote}"/>
                        <DataGridTextColumn Header="Created Date" Width="2*" Binding="{Binding CreatedDate}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
