<Page x:Class="Hospital_Management_System.MedicinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MedicinePage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- ===== TITLE ===== -->
        <TextBlock
            Text="MEDICINE MANAGEMENT"
            FontSize="26"
            FontWeight="Bold"
            Foreground="#2E4053"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"/>

        <!-- ===== BUTTONS ===== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">

            <Button Content="Add" Width="80" Margin="5" Click="BtnAdd_Click"/>
            <Button Content="Edit" Width="80" Margin="5" Click="BtnEdit_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="BtnDelete_Click"/>

            <TextBox x:Name="txtSearch" Width="200" Margin="15,5" />
            <Button Content="Search" Width="80" Margin="5" Click="BtnSearch_Click"/>

        </StackPanel>

        <!-- ===== DATAGRID ===== -->
        <DataGrid x:Name="dgMedicines"
                  Grid.Row="2"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MedicineId}" Width="*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding MedicineName}" Width="3*"/>
                <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="*"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="2*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>