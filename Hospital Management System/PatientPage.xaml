<Page x:Class="Hospital_Management_System.PatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="PatientPage" >

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- TITLE -->
            <RowDefinition Height="Auto"/>
            <!-- FORM -->
            <RowDefinition Height="Auto"/>
            <!-- BUTTONS -->
            <RowDefinition/>
            <!-- DATAGRID -->
        </Grid.RowDefinitions>

        <!-- ====== TITLE ====== -->
        <TextBlock Grid.Row="0"
                   Text="PATIENT MANAGEMENT"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2E4053"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- ====== FORM ====== -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <!-- FULL NAME -->
            <StackPanel Grid.Column="0" Margin="5">
                <Label Content="Full Name:"/>
                <TextBox x:Name="txtFullName"/>
            </StackPanel>

            <!-- GENDER -->
            <StackPanel Grid.Column="1" Margin="5">
                <Label Content="Gender:"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="rbMale" Content="Male" GroupName="GenderGroup" Margin="5,0"/>
                    <RadioButton x:Name="rbFemale" Content="Female" GroupName="GenderGroup" Margin="5,0"/>
                </StackPanel>
            </StackPanel>

            <!-- DOB -->
            <StackPanel Grid.Column="2" Margin="5">
                <Label Content="Date of Birth:"/>
                <DatePicker x:Name="dpDOB"/>
            </StackPanel>

            <!-- PHONE -->
            <StackPanel Grid.Column="3" Margin="5">
                <Label Content="Phone:"/>
                <TextBox x:Name="txtPhone"/>
            </StackPanel>

            <!-- ADDRESS -->
            <StackPanel Grid.Column="4" Margin="5">
                <Label Content="Address:"/>
                <TextBox x:Name="txtAddress"/>
            </StackPanel>

            <!-- INSURANCE -->
            <StackPanel Grid.Column="5" Margin="5">
                <Label Content="Insurance No:"/>
                <TextBox x:Name="txtInsurance"/>
            </StackPanel>
        </Grid>

        <!-- ====== BUTTONS ====== -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Add" Width="80" Margin="5" Click="BtnAdd_Click"/>
            <Button Content="Edit" Width="80" Margin="5" Click="BtnEdit_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="BtnDelete_Click"/>

            <TextBox x:Name="txtSearch" Width="200" Margin="15,5" TextChanged="txtSearch_TextChanged"/>
            <Button Content="Search" Width="80" Margin="5" Click="BtnSearch_Click"/>
        </StackPanel>

        <!-- ====== DATAGRID ====== -->
        <DataGrid x:Name="dgPatients"
                  Grid.Row="3"
                  Margin="0,10,0,0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="DgPatients_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PatientId}" Width="60"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                <DataGridTextColumn Header="DOB" Binding="{Binding Dob, StringFormat=\{0:dd/MM/yyyy\}}" Width="120"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="250"/>
                <DataGridTextColumn Header="Insurance" Binding="{Binding InsuranceNumber}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Page>
