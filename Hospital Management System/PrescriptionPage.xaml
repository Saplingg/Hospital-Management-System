<Window x:Class="Hospital_Management_System.PrescriptionPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Management_System"
        mc:Ignorable="d"
        Title="PrescriptionPage" Height="450" Width="800" WindowState="Maximized" Loaded="Prescription_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6.2*"/>
        </Grid.ColumnDefinitions>
        <local:SideBarDoctor Grid.Column="0"/>
        <Grid Margin="5" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" >PRESCRIPTION</TextBlock>
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5 0 5 5">
                <Grid>
                    <TextBlock Margin="5 -10 0 10" Background="White" Width="Auto" HorizontalAlignment="Left">SEARCH BY NAME</TextBlock>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" HorizontalAlignment="Left" Width="Auto">
                        <Button Margin="5" Width="60" Click="Add_Click">Add</Button>
                        <Button Margin="5" Width="60" Click="Update_Click">Update</Button>
                        <Button Margin="5" Width="60" Click="Delete_Click">Delete</Button>
                        <TextBox x:Name="sSearch" Margin="10 5" Width="200" BorderThickness="2"/>
                        <Button Margin="5" Width="80" Click="Prescription_Loaded">Search</Button>
                        <Button Margin="5" Width="80" Click="btnClearSearch_Click">Clear Search</Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="2" Margin="5">
                <DataGrid x:Name="dgPre" AutoGenerateColumns="False" IsReadOnly="True" Margin="0" Grid.Column="0" RowHeaderWidth="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Record ID" Width="*" Binding="{Binding RecordId}" />
                        <DataGridTextColumn Header="Medicine Name" Width="2*" Binding="{Binding Medicine.MedicineName}" />
                        <DataGridTextColumn Header="Quantity" Width="*" Binding="{Binding Quantity}" />
                        <DataGridTextColumn Header="Dosage" Width="2*" Binding="{Binding Dosage}"/>
                        <DataGridTextColumn Header="Subtotal" Width="*" Binding="{Binding SubTotal}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
