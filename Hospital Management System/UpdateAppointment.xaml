<Window x:Class="Hospital_Management_System.UpdateAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Management_System"
        mc:Ignorable="d"
        Title="UpdateAppointment" SizeToContent="Height" Width="400" WindowStartupLocation="CenterScreen" Loaded="AppointmentDetails_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="MidnightBlue">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26" Foreground="white" Padding="0 15">Appointment Details</TextBlock>
        </Grid>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock>Appointment ID:</TextBlock>
            <TextBox Name="Id" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2">
            <TextBlock>Patient ID:</TextBlock>
            <TextBox Name="PatientId" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="3">
            <TextBlock>Patient Name:</TextBlock>
            <TextBox Name="Name" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4">
            <TextBlock>Gender:</TextBlock>
            <TextBox Name="Gender" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5">
            <TextBlock>Date of birth:</TextBlock>
            <TextBox Name="Dob" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="6">
            <TextBlock>Phone:</TextBlock>
            <TextBox Name="Phone" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="7">
            <TextBlock>Address:</TextBlock>
            <TextBox Name="Address" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="8">
            <TextBlock>Appointment Date:</TextBlock>
            <TextBox Name="ApDate" Margin="10 0 10 5" IsReadOnly="True" Background="LightGray"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="9">
            <TextBlock>Status:</TextBlock>
            <ComboBox Name="Status" Margin="10 0 10 5"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="10">
            <TextBlock>Notes:</TextBlock>
            <TextBox x:Name="Note" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10 0 10 5"/>
        </StackPanel>

        <Button Grid.Row="11" Margin="10 15 10 5" Foreground="White" Background="Green" Click="Save_Click">Save</Button>
    </Grid>
</Window>
