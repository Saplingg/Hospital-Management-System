<Window x:Class="Hospital_Management_System.UpdateMedicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Medicine" Height="420" Width="350" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">

        <TextBlock Text="UPDATE MEDICINE" FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Label Content="Name:"/>
        <TextBox x:Name="txtName"/>

        <Label Content="Unit:"/>
        <TextBox x:Name="txtUnit"/>

        <Label Content="Unit Price:"/>
        <TextBox x:Name="txtPrice"/>

        <Label Content="Stock:"/>
        <TextBox x:Name="txtStock"/>

        <Button Content="Update" Height="40" Margin="0,20,0,0"
                Click="BtnUpdate_Click"/>

    </StackPanel>
</Window>
